---
import { getCollection } from 'astro:content';

// Fetch all content for search index
const characters = await getCollection('characters', ({ data }) => !data.draft);
const factions = await getCollection('factions', ({ data }) => !data.draft);
const locations = await getCollection('locations', ({ data }) => !data.draft);
const weapons = await getCollection('weapons', ({ data }) => !data.draft);
const armor = await getCollection('armor', ({ data }) => !data.draft);
const items = await getCollection('items', ({ data }) => !data.draft);
const creatures = await getCollection('creatures', ({ data }) => !data.draft);
const quests = await getCollection('quests', ({ data }) => !data.draft);
const lore = await getCollection('lore', ({ data }) => !data.draft);
const perks = await getCollection('perks', ({ data }) => !data.draft);
const games = await getCollection('games');

interface SearchItem {
  title: string;
  description: string;
  url: string;
  category: string;
  categoryLabel: string;
}

const searchIndex: SearchItem[] = [
  ...games.map(g => ({ title: g.data.title, description: g.data.description, url: `/games/${g.slug}`, category: 'games', categoryLabel: 'Game' })),
  ...characters.map(c => ({ title: c.data.title, description: c.data.description, url: `/characters/${c.slug}`, category: 'characters', categoryLabel: 'Character' })),
  ...factions.map(f => ({ title: f.data.title, description: f.data.description, url: `/factions/${f.slug}`, category: 'factions', categoryLabel: 'Faction' })),
  ...locations.map(l => ({ title: l.data.title, description: l.data.description, url: `/locations/${l.slug}`, category: 'locations', categoryLabel: 'Location' })),
  ...weapons.map(w => ({ title: w.data.title, description: w.data.description, url: `/weapons/${w.slug}`, category: 'weapons', categoryLabel: 'Weapon' })),
  ...armor.map(a => ({ title: a.data.title, description: a.data.description, url: `/armor/${a.slug}`, category: 'armor', categoryLabel: 'Armor' })),
  ...items.map(i => ({ title: i.data.title, description: i.data.description, url: `/items/${i.slug}`, category: 'items', categoryLabel: 'Item' })),
  ...creatures.map(c => ({ title: c.data.title, description: c.data.description, url: `/creatures/${c.slug}`, category: 'creatures', categoryLabel: 'Creature' })),
  ...quests.map(q => ({ title: q.data.title, description: q.data.description, url: `/quests/${q.slug}`, category: 'quests', categoryLabel: 'Quest' })),
  ...lore.map(l => ({ title: l.data.title, description: l.data.description, url: `/lore/${l.slug}`, category: 'lore', categoryLabel: 'Lore' })),
  ...perks.map(p => ({ title: p.data.title, description: p.data.description, url: `/perks/${p.slug}`, category: 'perks', categoryLabel: 'Perk' })),
];
---

<div class="search-modal" id="search-modal" aria-hidden="true">
  <div class="search-backdrop" id="search-backdrop"></div>
  <div class="search-container">
    <div class="search-header">
      <input
        type="text"
        id="search-input"
        class="search-input"
        placeholder="Search the wasteland..."
        autocomplete="off"
      />
      <kbd class="search-shortcut">ESC</kbd>
    </div>
    <div class="search-results" id="search-results">
      <div class="search-empty">
        <p>Type to search across all wiki articles</p>
        <p class="search-hint">Use arrow keys to navigate, Enter to select</p>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ searchIndex }}>
  const modal = document.getElementById('search-modal');
  const backdrop = document.getElementById('search-backdrop');
  const input = document.getElementById('search-input');
  const results = document.getElementById('search-results');
  let selectedIndex = -1;

  // Open modal with Ctrl/Cmd + K
  document.addEventListener('keydown', (e) => {
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      openSearch();
    }
    if (e.key === 'Escape' && modal.getAttribute('aria-hidden') === 'false') {
      closeSearch();
    }
  });

  // Click on backdrop closes modal
  backdrop?.addEventListener('click', closeSearch);

  // Search input handling
  input?.addEventListener('input', (e) => {
    const query = e.target.value.toLowerCase().trim();
    selectedIndex = -1;

    if (query.length < 2) {
      results.innerHTML = `
        <div class="search-empty">
          <p>Type to search across all wiki articles</p>
          <p class="search-hint">Use arrow keys to navigate, Enter to select</p>
        </div>
      `;
      return;
    }

    const filtered = searchIndex.filter(item =>
      item.title.toLowerCase().includes(query) ||
      item.description.toLowerCase().includes(query)
    ).slice(0, 10);

    if (filtered.length === 0) {
      results.innerHTML = `
        <div class="search-empty">
          <p>No results found for "${query}"</p>
          <p class="search-hint">Try a different search term</p>
        </div>
      `;
      return;
    }

    results.innerHTML = filtered.map((item, index) => `
      <a href="${item.url}" class="search-result" data-index="${index}">
        <span class="result-category">${item.categoryLabel}</span>
        <span class="result-title">${highlightMatch(item.title, query)}</span>
        <span class="result-description">${truncate(item.description, 60)}</span>
      </a>
    `).join('');

    // Add click handlers
    results.querySelectorAll('.search-result').forEach(result => {
      result.addEventListener('click', () => closeSearch());
    });
  });

  // Keyboard navigation
  input?.addEventListener('keydown', (e) => {
    const items = results.querySelectorAll('.search-result');

    if (e.key === 'ArrowDown') {
      e.preventDefault();
      selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
      updateSelection(items);
    } else if (e.key === 'ArrowUp') {
      e.preventDefault();
      selectedIndex = Math.max(selectedIndex - 1, 0);
      updateSelection(items);
    } else if (e.key === 'Enter' && selectedIndex >= 0) {
      e.preventDefault();
      items[selectedIndex]?.click();
    }
  });

  function openSearch() {
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    setTimeout(() => input?.focus(), 50);
  }

  function closeSearch() {
    modal.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    input.value = '';
    selectedIndex = -1;
    results.innerHTML = `
      <div class="search-empty">
        <p>Type to search across all wiki articles</p>
        <p class="search-hint">Use arrow keys to navigate, Enter to select</p>
      </div>
    `;
  }

  function updateSelection(items) {
    items.forEach((item, index) => {
      item.classList.toggle('selected', index === selectedIndex);
    });
    items[selectedIndex]?.scrollIntoView({ block: 'nearest' });
  }

  function highlightMatch(text, query) {
    const regex = new RegExp(`(${query})`, 'gi');
    return text.replace(regex, '<mark>$1</mark>');
  }

  function truncate(text, length) {
    return text.length > length ? text.substring(0, length) + '...' : text;
  }

  // Expose openSearch globally for the search button
  window.openSearch = openSearch;
</script>

<style>
  .search-modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 10vh;
    transition: opacity 0.2s, visibility 0.2s;
  }

  .search-modal[aria-hidden="true"] {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .search-modal[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
  }

  .search-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
  }

  .search-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 var(--spacing-md);
    background: var(--color-bg-darker);
    border: 2px solid var(--color-pip-green);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .search-header {
    display: flex;
    align-items: center;
    padding: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
    gap: var(--spacing-md);
  }

  .search-input {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--color-text);
    font-size: 1.125rem;
    outline: none;
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-shortcut {
    background: var(--color-bg-dark);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    font-family: inherit;
  }

  .search-results {
    max-height: 400px;
    overflow-y: auto;
  }

  .search-empty {
    padding: var(--spacing-xl);
    text-align: center;
    color: var(--color-text-muted);
  }

  .search-empty p {
    margin: 0;
  }

  .search-hint {
    font-size: 0.875rem;
    margin-top: var(--spacing-sm) !important;
    opacity: 0.7;
  }

  .search-result {
    display: flex;
    flex-direction: column;
    padding: var(--spacing-md);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border);
    transition: background 0.15s;
  }

  .search-result:hover,
  .search-result.selected {
    background: rgba(24, 255, 109, 0.1);
    text-decoration: none;
  }

  .search-result:last-child {
    border-bottom: none;
  }

  .result-category {
    font-size: 0.7rem;
    text-transform: uppercase;
    color: var(--color-pip-green);
    font-weight: bold;
    margin-bottom: 2px;
  }

  .result-title {
    color: var(--color-text);
    font-weight: 500;
  }

  .result-title :global(mark) {
    background: var(--color-pip-amber);
    color: var(--color-bg-dark);
    padding: 0 2px;
    border-radius: 2px;
  }

  .result-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: 2px;
  }
</style>
