---
interface InfoBoxLink {
  text: string;
  url: string;
}

type InfoBoxValue = string | string[] | InfoBoxLink | InfoBoxLink[];

interface Props {
  title: string;
  image?: string;
  data: Record<string, InfoBoxValue>;
}

const { title, image, data } = Astro.props;

function isLink(val: unknown): val is InfoBoxLink {
  return typeof val === 'object' && val !== null && 'text' in val && 'url' in val;
}

function renderValue(value: InfoBoxValue): string {
  if (Array.isArray(value)) {
    return value.map(v => {
      if (isLink(v)) {
        return `<a href="${v.url}">${v.text}</a>`;
      }
      return String(v);
    }).join(', ');
  }
  if (isLink(value)) {
    return `<a href="${value.url}">${value.text}</a>`;
  }
  return String(value);
}
---

<div class="infobox">
  <div class="infobox-header">
    <h3>{title}</h3>
  </div>

  <div class="infobox-image">
    <img src={image || "/images/placeholder.svg"} alt={title} />
  </div>

  <dl class="infobox-data">
    {Object.entries(data).map(([key, value]) => (
      <>
        <dt>{key}</dt>
        <dd set:html={renderValue(value)} />
      </>
    ))}
  </dl>
</div>

<style>
  .infobox {
    background: var(--color-bg-dark);
    border: 2px solid var(--color-pip-green);
    border-radius: 8px;
    overflow: hidden;
  }

  .infobox-header {
    background: var(--color-vault-blue);
    padding: var(--spacing-md);
    text-align: center;
  }

  .infobox-header h3 {
    margin: 0;
    color: var(--color-pip-amber);
  }

  .infobox-image {
    padding: var(--spacing-md);
    text-align: center;
    background: var(--color-bg-darker);
  }

  .infobox-image img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }

  .infobox-data {
    padding: var(--spacing-md);
  }

  .infobox-data dt {
    color: var(--color-pip-amber);
    font-weight: bold;
    font-size: 0.875rem;
    margin-top: var(--spacing-sm);
  }

  .infobox-data dt:first-child {
    margin-top: 0;
  }

  .infobox-data dd {
    color: var(--color-text);
    margin-left: 0;
    padding-left: var(--spacing-sm);
    border-left: 2px solid var(--color-border);
  }
</style>
