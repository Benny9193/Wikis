---
import BaseLayout from './BaseLayout.astro';
import TableOfContents from '../components/TableOfContents.astro';
import InfoBox from '../components/InfoBox.astro';
import RelatedArticles from '../components/RelatedArticles.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import ArticleNavigation from '../components/ArticleNavigation.astro';
import FavoriteButton from '../components/FavoriteButton.astro';

const currentUrl = Astro.url.pathname;

interface RelatedArticle {
  title: string;
  url: string;
  category: string;
  description?: string;
}

interface NavArticle {
  title: string;
  slug: string;
}

interface Props {
  title: string;
  description: string;
  image?: string;
  games?: string[];
  tags?: string[];
  infobox?: Record<string, string | string[]>;
  category: string;
  relatedArticles?: RelatedArticle[];
  previousArticle?: NavArticle | null;
  nextArticle?: NavArticle | null;
}

const { title, description, image, games = [], tags = [], infobox, category, relatedArticles = [], previousArticle, nextArticle } = Astro.props;

const categoryLabels: Record<string, string> = {
  characters: 'Characters',
  factions: 'Factions',
  locations: 'Locations',
  weapons: 'Weapons',
  armor: 'Armor',
  items: 'Items',
  creatures: 'Creatures',
  quests: 'Quests',
  lore: 'Lore',
  perks: 'Perks',
  games: 'Games',
};

const gameLabels: Record<string, string> = {
  'fallout1': 'Fallout',
  'fallout2': 'Fallout 2',
  'fallout3': 'Fallout 3',
  'fallout-new-vegas': 'New Vegas',
  'fallout4': 'Fallout 4',
  'fallout76': 'Fallout 76',
  'fallout-tactics': 'Tactics',
  'fallout-shelter': 'Shelter',
  'fallout-brotherhood': 'Brotherhood',
};
---

<BaseLayout title={title} description={description} image={image}>
  <article class="wiki-article">
    <div class="article-header">
      <Breadcrumb items={[
        { label: categoryLabels[category] || category, href: `/${category}` },
        { label: title }
      ]} />
      <div class="title-row">
        <h1>{title}</h1>
        <FavoriteButton articleUrl={currentUrl} articleTitle={title} category={category} />
      </div>
      {games.length > 0 && (
        <div class="game-tags">
          {games.map(game => (
            <a href={`/games/${game}`} class="game-tag">{gameLabels[game] || game}</a>
          ))}
        </div>
      )}
    </div>

    <div class="article-layout">
      <aside class="article-sidebar">
        {infobox && <InfoBox title={title} image={image} data={infobox} />}
        <TableOfContents />
      </aside>

      <div class="article-content">
        <slot />

        {tags.length > 0 && (
          <div class="article-tags">
            <h3>Tags</h3>
            <div class="tag-list">
              {tags.map(tag => (
                <a href={`/tags/${tag}`} class="tag">{tag}</a>
              ))}
            </div>
          </div>
        )}

        <RelatedArticles articles={relatedArticles} />

        <ArticleNavigation
          previous={previousArticle}
          next={nextArticle}
          category={category}
        />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .wiki-article {
    background: var(--color-bg-darker);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
  }

  .article-header {
    background: linear-gradient(135deg, var(--color-vault-blue), var(--color-bg-darker));
    padding: var(--spacing-lg);
    border-bottom: 2px solid var(--color-pip-green);
  }

  .title-row {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .title-row h1 {
    margin: 0;
  }

  .game-tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    margin-top: var(--spacing-md);
  }

  .game-tag {
    background: var(--color-pip-green);
    color: var(--color-bg-dark);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .game-tag:hover {
    background: var(--color-pip-amber);
    text-decoration: none;
  }

  .article-layout {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg);
  }

  @media (max-width: 900px) {
    .article-layout {
      grid-template-columns: 1fr;
    }

    .article-sidebar {
      order: -1;
    }
  }

  .article-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .article-content {
    min-width: 0;
  }

  .article-content :global(h2) {
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--spacing-sm);
    margin-top: var(--spacing-lg);
  }

  .article-content :global(h3) {
    margin-top: var(--spacing-md);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-left: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--color-pip-amber);
    padding-left: var(--spacing-md);
    margin: var(--spacing-md) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .article-tags {
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .tag-list {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-wasteland-brown);
    color: var(--color-text);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .tag:hover {
    background: var(--color-pip-amber);
    color: var(--color-bg-dark);
    text-decoration: none;
  }
</style>
