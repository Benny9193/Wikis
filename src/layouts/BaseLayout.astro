---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'The Fallout Universe Encyclopedia', image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title} | Fallout Wiki</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Fallout Wiki`} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={new URL(image, Astro.url)} />}
  </head>
  <body>
    <header class="site-header">
      <nav class="main-nav">
        <a href="/" class="logo">
          <span class="logo-icon">â˜¢</span>
          <span class="logo-text">Fallout Wiki</span>
        </a>
        <ul class="nav-links">
          <li><a href="/games">Games</a></li>
          <li><a href="/characters">Characters</a></li>
          <li><a href="/factions">Factions</a></li>
          <li><a href="/locations">Locations</a></li>
          <li><a href="/weapons">Weapons</a></li>
          <li><a href="/armor">Armor</a></li>
          <li><a href="/items">Items</a></li>
          <li><a href="/creatures">Creatures</a></li>
          <li><a href="/quests">Quests</a></li>
          <li><a href="/lore">Lore</a></li>
          <li><a href="/perks">Perks</a></li>
        </ul>
        <div class="search-box">
          <input type="search" placeholder="Search the Wasteland..." />
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-content">
        <p>Fallout Wiki - Your guide to the post-apocalyptic wasteland</p>
        <p class="disclaimer">
          Fallout and related marks are trademarks of Bethesda Softworks LLC.
          This is a fan-made wiki and is not affiliated with Bethesda.
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Fallout-inspired color palette */
    --color-vault-blue: #0a4b8c;
    --color-pip-green: #18ff6d;
    --color-pip-amber: #ffb000;
    --color-wasteland-brown: #3d3225;
    --color-rust: #8b4513;
    --color-terminal-green: #00ff00;
    --color-nuka-red: #e31c23;

    /* Neutral colors */
    --color-bg-dark: #1a1a1a;
    --color-bg-darker: #0d0d0d;
    --color-text: #e0e0e0;
    --color-text-muted: #888;
    --color-border: #333;

    /* Spacing */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 2rem;
    --spacing-xl: 4rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: 'Segoe UI', system-ui, sans-serif;
    background-color: var(--color-bg-dark);
    color: var(--color-text);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--color-pip-green);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
    color: var(--color-pip-amber);
  }

  main {
    flex: 1;
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--spacing-lg);
    width: 100%;
  }

  h1, h2, h3, h4, h5, h6 {
    color: var(--color-pip-amber);
    margin-bottom: var(--spacing-md);
  }

  p {
    margin-bottom: var(--spacing-md);
  }
</style>

<style>
  .site-header {
    background: var(--color-bg-darker);
    border-bottom: 2px solid var(--color-pip-green);
    padding: var(--spacing-md) var(--spacing-lg);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .main-nav {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-pip-amber);
  }

  .logo:hover {
    text-decoration: none;
  }

  .logo-icon {
    font-size: 2rem;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .nav-links a {
    color: var(--color-text);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    transition: background-color 0.2s;
  }

  .nav-links a:hover {
    background-color: var(--color-vault-blue);
    text-decoration: none;
  }

  .search-box {
    margin-left: auto;
  }

  .search-box input {
    background: var(--color-bg-dark);
    border: 1px solid var(--color-pip-green);
    color: var(--color-text);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 4px;
    width: 250px;
  }

  .search-box input::placeholder {
    color: var(--color-text-muted);
  }

  .site-footer {
    background: var(--color-bg-darker);
    border-top: 2px solid var(--color-pip-green);
    padding: var(--spacing-lg);
    text-align: center;
  }

  .disclaimer {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: var(--spacing-sm);
  }
</style>
