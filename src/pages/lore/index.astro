---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getCollection } from 'astro:content';

const lore = await getCollection('lore', ({ data }) => !data.draft);
const sortedLore = lore.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<BaseLayout title="Lore" description="History, timeline, and world-building of the Fallout universe">
  <div class="category-header">
    <h1>Lore</h1>
    <p>The history, timeline, and deep lore of the Fallout universe.</p>
  </div>

  <div class="article-grid">
    {sortedLore.map(entry => (
      <ArticleCard
        title={entry.data.title}
        description={entry.data.description}
        href={`/lore/${entry.slug}`}
        image={entry.data.image}
        games={entry.data.games}
      />
    ))}
  </div>

  {sortedLore.length === 0 && (
    <div class="empty-state">
      <p>No lore entries found. Check back soon!</p>
    </div>
  )}
</BaseLayout>

<style>
  .category-header {
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 2px solid var(--color-pip-green);
  }

  .category-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .article-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--color-text-muted);
  }
</style>
