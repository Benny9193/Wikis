---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all collections
const characters = await getCollection('characters', ({ data }) => !data.draft);
const factions = await getCollection('factions', ({ data }) => !data.draft);
const locations = await getCollection('locations', ({ data }) => !data.draft);
const weapons = await getCollection('weapons', ({ data }) => !data.draft);
const armor = await getCollection('armor', ({ data }) => !data.draft);
const items = await getCollection('items', ({ data }) => !data.draft);
const creatures = await getCollection('creatures', ({ data }) => !data.draft);
const quests = await getCollection('quests', ({ data }) => !data.draft);
const lore = await getCollection('lore', ({ data }) => !data.draft);
const perks = await getCollection('perks', ({ data }) => !data.draft);

// Combine all entries
const allEntries = [
  ...characters,
  ...factions,
  ...locations,
  ...weapons,
  ...armor,
  ...items,
  ...creatures,
  ...quests,
  ...lore,
  ...perks,
];

// Extract all tags with counts
const tagCounts = new Map<string, number>();
allEntries.forEach(entry => {
  const tags = entry.data.tags || [];
  tags.forEach((tag: string) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by count (descending), then alphabetically
const sortedTags = Array.from(tagCounts.entries())
  .sort((a, b) => {
    if (b[1] !== a[1]) return b[1] - a[1];
    return a[0].localeCompare(b[0]);
  });
---

<BaseLayout title="All Tags" description="Browse all tags in the Fallout Wiki">
  <div class="tags-page">
    <div class="page-header">
      <h1>All Tags</h1>
      <p>Browse articles by tag. Click any tag to see related content.</p>
    </div>

    <div class="tag-stats">
      <span class="stat">{sortedTags.length} tags</span>
      <span class="stat">{allEntries.length} articles</span>
    </div>

    <div class="tag-cloud">
      {sortedTags.map(([tag, count]) => {
        const size = count >= 10 ? 'large' : count >= 5 ? 'medium' : 'small';
        return (
          <a href={`/tags/${tag}`} class={`tag-link ${size}`}>
            {tag}
            <span class="tag-count">{count}</span>
          </a>
        );
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .tags-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: var(--spacing-lg);
  }

  .page-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .tag-stats {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-md);
    background: var(--color-bg-darker);
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }

  .stat {
    color: var(--color-pip-green);
    font-weight: bold;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .tag-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    background: var(--color-bg-darker);
    border: 1px solid var(--color-border);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.2s;
  }

  .tag-link:hover {
    background: var(--color-pip-green);
    color: var(--color-bg-dark);
    border-color: var(--color-pip-green);
    text-decoration: none;
  }

  .tag-link.small {
    font-size: 0.875rem;
  }

  .tag-link.medium {
    font-size: 1rem;
    padding: var(--spacing-sm) var(--spacing-md);
  }

  .tag-link.large {
    font-size: 1.125rem;
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--color-vault-blue);
    border-color: var(--color-vault-blue);
  }

  .tag-count {
    background: rgba(0, 0, 0, 0.3);
    padding: 2px 6px;
    border-radius: 10px;
    font-size: 0.75rem;
  }

  .tag-link:hover .tag-count {
    background: rgba(0, 0, 0, 0.2);
  }
</style>
