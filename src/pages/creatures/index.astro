---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getCollection } from 'astro:content';

const creatures = await getCollection('creatures', ({ data }) => !data.draft);
const sortedCreatures = creatures.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<BaseLayout title="Creatures" description="Mutants, animals, and abominations of the wasteland">
  <div class="category-header">
    <h1>Creatures</h1>
    <p>Deathclaws, Radscorpions, Super Mutants, and other dangers of the wasteland.</p>
  </div>

  <div class="article-grid">
    {sortedCreatures.map(creature => (
      <ArticleCard
        title={creature.data.title}
        description={creature.data.description}
        href={`/creatures/${creature.slug}`}
        image={creature.data.image}
        games={creature.data.games}
      />
    ))}
  </div>

  {sortedCreatures.length === 0 && (
    <div class="empty-state">
      <p>No creatures found. Check back soon!</p>
    </div>
  )}
</BaseLayout>

<style>
  .category-header {
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 2px solid var(--color-pip-green);
  }

  .category-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .article-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--color-text-muted);
  }
</style>
